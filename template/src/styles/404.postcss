.err-pg {
  max-width: 30rem;
  margin: 20vh auto;
  font-size: 1.5rem;
  text-align: center;
  & h1 {
    position: relative;
  }
  & .status {
    left: 0.3em;
    top: 0.3em;
    z-index: 1;
    opacity: 0.3;
    font-size: 2.5em;
    font-weight: bold;
    transform: translate(-50%, -50%) rotate(-45deg);
    position: absolute;
    color: $purple-l;
  }
}
